<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:gravity="right"
        android:layout_height="wrap_content">
        <TextView
            android:text="Remaning Balance : Rs "
            android:paddingLeft="10dp"
            android:id="@+id/remainingBalanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text=""
            android:layout_toRightOf="@id/remainingBalanceText"
            android:gravity="center"
            android:textColor="@android:color/holo_red_light"
            android:id="@+id/remainingBalanceAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="35sp"
        android:textStyle="italic"
        android:fontFamily="sans-serif-light"
        android:text="Aaj Khane Mein Kya Hai"
        />

    <TextView
        android:padding="10dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@android:color/holo_blue_dark"
        android:id="@+id/itemNameText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Price per unit Rs 10/-"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:id="@+id/priceText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:padding="10dp"
        android:text="How many units would you like to order?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <NumberPicker
        android:clickable="false"
        android:id="@+id/number_of_unit_picker"
        android:layout_marginTop="10dp"
        android:descendantFocusability="blocksDescendants"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="100dp"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Total cost : Rs "
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:layout_alignBaseline="@+id/totalamount"
            android:id="@+id/totalamounttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="10"
            android:textSize="20sp"
            android:layout_toRightOf="@id/totalamounttext"
            android:gravity="center"
            android:id="@id/totalamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Today's Total Order : "
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/todaysOrder"
            android:layout_alignBaseline="@id/todaysOrder"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@id/todaysOrder"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/terms"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Confirm Order"
        android:layout_marginTop="5dp"
        android:id="@+id/confirm_order_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>

